{
  "doctype": "DocType",
  "name": "Attendance Summary",
  "module": "SLCM",
  "autoname": "AS-.YYYY.-.#####",
  "naming_rule": "Expression (old style)",
  "allow_rename": 1,
  "field_order": [
    "student",
    "student_name",
    "course_offering",
    "course",
    "academic_year",
    "term_name",
    "total_classes",
    "attended_classes",
    "attendance_percentage",
    "minimum_required_percentage",
    "eligible_for_exam",
    "last_updated"
  ],
  "fields": [
    {
      "fieldname": "student",
      "fieldtype": "Link",
      "label": "Student",
      "options": "Student Master",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "student_name",
      "fieldtype": "Data",
      "label": "Student Name",
      "fetch_from": "student.first_name",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "course_offering",
      "fieldtype": "Link",
      "label": "Course Offering",
      "options": "Course Offering",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "course",
      "fieldtype": "Link",
      "label": "Course",
      "options": "Course",
      "fetch_from": "course_offering.course_title",
      "read_only": 1
    },
    {
      "fieldname": "academic_year",
      "fieldtype": "Link",
      "label": "Academic Year",
      "options": "Academic Year",
      "fetch_from": "course_offering.academic_year",
      "read_only": 1
    },
    {
      "fieldname": "term_name",
      "fieldtype": "Data",
      "label": "Term",
      "fetch_from": "course_offering.term_name",
      "read_only": 1
    },
    {
      "fieldname": "total_classes",
      "fieldtype": "Float",
      "label": "Total Classes",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "attended_classes",
      "fieldtype": "Float",
      "label": "Attended Classes",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "attendance_percentage",
      "fieldtype": "Percent",
      "label": "Attendance Percentage",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "minimum_required_percentage",
      "fieldtype": "Percent",
      "label": "Minimum Required %",
      "default": 75,
      "read_only": 1
    },
    {
      "fieldname": "eligible_for_exam",
      "fieldtype": "Check",
      "label": "Eligible for Exam",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "last_updated",
      "fieldtype": "Datetime",
      "label": "Last Updated",
      "read_only": 1
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 0,
      "create": 0,
      "delete": 1,
      "print": 1,
      "export": 1,
      "report": 1,
      "share": 1
    }
  ],
  "row_format": "Dynamic",
  "sort_field": "modified",
  "sort_order": "DESC"
}