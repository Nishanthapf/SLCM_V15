{
  "doctype": "DocType",
  "name": "Cohort",
  "module": "SLCM",
  "autoname": "field:cohort_name",
  "allow_rename": 1,
  "naming_rule": "By fieldname",
  "title_field": "cohort_name",

  "field_order": [
    "cohort_code",
    "cohort_name",
    "program",
    "academic_year",
    "term_name",
    "section_schedule",
    "start_date",
    "end_date",
    "term_days",
    "term_weeks",
    "section_status",
    "status",
    "description"
  ],

  "fields": [

    {
      "fieldname": "cohort_code",
      "fieldtype": "Data",
      "label": "Cohort Code",
      "reqd": 1,
      "unique": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "cohort_name",
      "fieldtype": "Data",
      "label": "Cohort Name",
      "reqd": 1,
      "unique": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "program",
      "fieldtype": "Link",
      "label": "Program",
      "options": "Program",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "academic_year",
      "fieldtype": "Link",
      "label": "Academic Year",
      "options": "Academic Year",
      "reqd": 1
    },
    {
      "fieldname": "term_name",
      "fieldtype": "Select",
      "label": "Term Name",
      "options": "Semester 1\nSemester 2\nSemester 3\nSemester 4\nSemester 5\nSemester 6\nSemester 7\nSemester 8\nTrimester 1\nTrimester 2\nTrimester 3",
      "reqd": 1
    },

    {
      "fieldname": "section_schedule",
      "fieldtype": "Section Break",
      "label": "Term Schedule"
    },
    {
      "fieldname": "start_date",
      "fieldtype": "Date",
      "label": "Term Start Date",
      "reqd": 1
    },
    {
      "fieldname": "end_date",
      "fieldtype": "Date",
      "label": "Term End Date",
      "reqd": 1
    },
    {
      "fieldname": "term_days",
      "fieldtype": "Int",
      "label": "Term Duration (Days)",
      "read_only": 1
    },
    {
      "fieldname": "term_weeks",
      "fieldtype": "Int",
      "label": "Term Duration (Weeks)",
      "read_only": 1
    },

    {
      "fieldname": "section_status",
      "fieldtype": "Section Break",
      "label": "Status & Notes"
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Status",
      "options": "Planned\nActive\nCompleted\nInactive",
      "default": "Planned",
      "reqd": 1
    },
    {
      "fieldname": "description",
      "fieldtype": "Small Text",
      "label": "Description"
    }
  ],

  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "print": 1,
      "email": 1,
      "export": 1,
      "report": 1,
      "share": 1
    }
  ],

  "row_format": "Dynamic",
  "sort_field": "modified",
  "sort_order": "DESC"
}
