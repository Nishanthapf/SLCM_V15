{
  "doctype": "DocType",
  "name": "Student Enrollment",
  "module": "SLCM",
  "autoname": "ENR-.YYYY.-.#####",
  "allow_rename": 1,
  "allow_import": 1,
  "title_field": "student_name",

  "field_order": [
    "section_student",
    "student",
    "student_name",
    "enrollment_date",

    "column_break_1",

    "cohort",
    "program",
    "academic_year",
    "term_name",
    "term_duration_weeks",

    "section_courses",
    "courses",

    "section_advisor",
    "faculty_advisor",
    "status",
    "remarks"
  ],

  "fields": [

    {
      "fieldname": "section_student",
      "fieldtype": "Section Break",
      "label": "Student Details"
    },
    {
      "fieldname": "student",
      "fieldtype": "Link",
      "label": "Student",
      "options": "Student Master",
      "reqd": 1
    },
    {
      "fieldname": "student_name",
      "fieldtype": "Data",
      "label": "Student Name",
      "fetch_from": "student.first_name",
      "read_only": 1
    },
    {
      "fieldname": "enrollment_date",
      "fieldtype": "Date",
      "label": "Enrollment Date",
      "default": "Today",
      "reqd": 1
    },

    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },

    {
      "fieldname": "cohort",
      "fieldtype": "Link",
      "label": "Cohort",
      "options": "Cohort",
      "reqd": 1
    },
    {
      "fieldname": "program",
      "fieldtype": "Link",
      "label": "Program",
      "options": "Program",
      "fetch_from": "cohort.program",
      "read_only": 1
    },
    {
      "fieldname": "academic_year",
      "fieldtype": "Link",
      "label": "Academic Year",
      "options": "Academic Year",
      "fetch_from": "cohort.academic_year",
      "read_only": 1
    },
    {
      "fieldname": "term_name",
      "fieldtype": "Data",
      "label": "Term Name",
      "fetch_from": "cohort.term_name",
      "read_only": 1
    },
    {
      "fieldname": "term_duration_weeks",
      "fieldtype": "Int",
      "label": "Term Duration (Weeks)",
      "fetch_from": "cohort.term_weeks",
      "read_only": 1
    },

    {
      "fieldname": "section_courses",
      "fieldtype": "Section Break",
      "label": "Enrolled Courses"
    },
    {
      "fieldname": "courses",
      "fieldtype": "Table",
      "label": "Courses",
      "options": "Student Enrollment Course"
    },

    {
      "fieldname": "section_advisor",
      "fieldtype": "Section Break",
      "label": "Advisor & Status"
    },
    {
      "fieldname": "faculty_advisor",
      "fieldtype": "Link",
      "label": "Faculty Advisor",
      "options": "Faculty"
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Enrollment Status",
      "options": "Enrolled\nDropped\nCompleted",
      "default": "Enrolled",
      "reqd": 1
    },
    {
      "fieldname": "remarks",
      "fieldtype": "Small Text",
      "label": "Remarks"
    }
  ],

  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "print": 1,
      "email": 1,
      "export": 1,
      "report": 1,
      "share": 1
    }
  ],

  "sort_field": "modified",
  "sort_order": "DESC"
}
