{
  "doctype": "DocType",
  "name": "Student RFID Card",
  "module": "SLCM",

  "autoname": "RFID-.#####",
  "naming_rule": "Expression (old style)",
  "allow_rename": 1,

  "field_order": [
    "student",
    "rfid_uid",
    "card_status",
    "is_active",
    "issued_date",
    "deactivated_date",
    "remarks"
  ],

  "fields": [
    {
      "fieldname": "student",
      "fieldtype": "Link",
      "label": "Student",
      "options": "Student Master",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "rfid_uid",
      "fieldtype": "Data",
      "label": "RFID UID",
      "reqd": 1,
      "unique": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "card_status",
      "fieldtype": "Select",
      "label": "Card Status",
      "options": "Active\nBlocked\nLost\nDamaged\nReplaced",
      "default": "Active",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "is_active",
      "fieldtype": "Check",
      "label": "Is Active",
      "default": 1
    },
    {
      "fieldname": "issued_date",
      "fieldtype": "Date",
      "label": "Issued Date",
      "reqd": 1
    },
    {
      "fieldname": "deactivated_date",
      "fieldtype": "Date",
      "label": "Deactivated Date"
    },
    {
      "fieldname": "remarks",
      "fieldtype": "Small Text",
      "label": "Remarks / Reason"
    }
  ],

  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "print": 1,
      "email": 1,
      "export": 1,
      "report": 1,
      "share": 1
    }
  ],

  "row_format": "Dynamic",
  "sort_field": "modified",
  "sort_order": "DESC"
}
